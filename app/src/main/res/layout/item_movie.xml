<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/individualMovieView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtOverviewMovie"
        android:layout_width="177dp"
        android:layout_height="411dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/audiowide"
        android:text="Descripción"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitleMovie"
        android:layout_width="185dp"
        android:layout_height="92dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/audiowide"
        android:text="Título"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtOverviewMovie"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtReleaseMovie"
        android:layout_width="183dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/audiowide"
        android:text="Fecha"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toEndOf="@+id/txtOverviewMovie"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleMovie" />

    <ImageView
        android:id="@+id/imgMovie"
        android:layout_width="188dp"
        android:layout_height="231dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtOverviewMovie"
        app:layout_constraintTop_toBottomOf="@+id/txtReleaseMovie"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>