<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movies"
    tools:context=".MoviesMenus.MoviesMainMenu">

    <Button
        android:id="@+id/popularBtn"
        android:layout_width="374dp"
        android:layout_height="133dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/audiowide"
        android:onClick="onClick"
        android:text="Populares"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ultimoBtn"
        android:layout_width="374dp"
        android:layout_height="133dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="@font/audiowide"
        android:onClick="onClick"
        android:text="Lo Ãšltimo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popularBtn" />

    <Button
        android:id="@+id/mejorBtn"
        android:layout_width="374dp"
        android:layout_height="133dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/design_default_color_error"
        android:fontFamily="@font/audiowide"
        android:onClick="onClick"
        android:text="Lo Mejor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ultimoBtn" />

    <Button
        android:id="@+id/proxiBtn"
        android:layout_width="374dp"
        android:layout_height="133dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/audiowide"
        android:onClick="onClick"
        android:text="Proximamente"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mejorBtn"
        app:layout_constraintVertical_bias="0.254" />
</androidx.constraintlayout.widget.ConstraintLayout>