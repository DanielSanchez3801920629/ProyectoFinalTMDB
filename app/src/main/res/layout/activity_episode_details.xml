<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tv_back"
    tools:context=".TvMenus.EpisodeDetails">

    <ImageView
        android:id="@+id/imgEpisodeDetails"
        android:layout_width="315dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEpisodeDetailName"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtEpisodeDetailName"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/audiowide"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEpisodeDetailOverview"
        android:layout_width="346dp"
        android:layout_height="226dp"
        android:fontFamily="@font/audiowide"
        android:text="DescripciÃ³n"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEpisodeDetailNumber"
        app:layout_constraintVertical_bias="0.261" />

    <TextView
        android:id="@+id/txtEpisodeDetailNumber"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/audiowide"
        android:text="Episodio"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEpisodeDetailDate" />

    <TextView
        android:id="@+id/txtEpisodeDetailDate"
        android:layout_width="254dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/audiowide"
        android:text="Fecha"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEpisodeDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>